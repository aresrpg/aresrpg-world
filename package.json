{
  "name": "@aresrpg/aresrpg-world",
  "version": "0.3.0",
  "description": "Procedural voxel terrain generation for AresRPG",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc",
    "lint": "eslint . --ext .ts && prettier . --check && npm run typecheck",
    "typecheck": "tsc --build",
    "format": "prettier . --write && eslint . --fix --ext .ts",
    "postversion": "git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aresrpg/aresrpg-world.git"
  },
  "keywords": [],
  "dependencies": {
    "alea": "^1.0.1",
    "simplex-noise": "^4.0.1",
    "sparse-octree": "^7.1.8",
    "three": "^0.162.0"
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "@types/three": "^0.162.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.29.1",
    "husky": "^4.3.8",
    "lint-staged": "13.2.3",
    "prettier": "3.1.1",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": "prettier --write",
    "*.md": "prettier --write",
    "*.yml": "prettier --write"
  }
}
